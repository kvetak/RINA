package rina.src.DAF.AP.APPing;
import rina.src.DAF.AP.AP;
import rina.src.DAF.AP.APInst;

simple APPing extends AP like APInst
{
    parameters:
        @class(APPing);

        double startAt @unit(s) = default(-1s);
        double stopAt  @unit(s) = default(-1s);
        double pingAt  @unit(s) = default(0s);
        double interval @unit(s) = default(1s);

        string dstApName = default("AppERROR");
        string dstApInstance = default("0");
        string dstAeName = default("AEMonitor");
        string dstAeInstance = default("-1");
}
